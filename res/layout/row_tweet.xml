<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="3dip"
    android:paddingLeft="6dip"
    android:paddingRight="7dip"
    android:paddingTop="4dip" >

    <LinearLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/action_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dip"
            android:layout_marginRight="7dip"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/action_by_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/action_by_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:textColor="#666666"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginBottom="6dip"
            android:layout_marginRight="6dip"
            android:layout_marginTop="1dip"
            android:contentDescription="@string/description_icon"
            android:paddingTop="2dip" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:stretchColumns="1" >

                <TableRow>

                    <TextView
                        android:id="@+id/display_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/screen_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dip"
                        android:textColor="#666666"
                        android:textSize="10sp" />

                    <!--
                         <TextView
                        android:id="@+id/is_favorited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fontello_star"
                        android:textSize="12sp" />
                    -->

                    <TextView
                        android:id="@+id/datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="10sp" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dip"
                android:layout_marginTop="10dip"
                android:orientation="vertical" >
            </LinearLayout>

            <TableLayout
                android:id="@+id/menu_and_via"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="5" >

                <TableRow>

                    <TextView
                        android:id="@+id/do_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dip"
                        android:text="@string/fontello_reply"
                        android:textColor="#666666"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/do_retweet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:padding="6dip"
                        android:text="@string/fontello_retweet"
                        android:textColor="#666666"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/retweet_count"
                        android:layout_width="24dip"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dip"
                        android:paddingTop="6dip"
                        android:textColor="#999999"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/do_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dip"
                        android:text="@string/fontello_star"
                        android:textColor="#666666"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/fav_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dip"
                        android:paddingTop="6dip"
                        android:textColor="#999999"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/via"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:paddingBottom="2dip"
                        android:textColor="#666666"
                        android:textSize="10sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/retweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:gravity="left" >

                <ImageView
                    android:id="@+id/retweet_icon"
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_marginRight="4dip"
                    android:contentDescription="@string/description_icon" />

                <TextView
                    android:id="@+id/retweet_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>