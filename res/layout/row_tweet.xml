<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="3dip"
    android:paddingLeft="6dip"
    android:paddingRight="7dip"
    android:paddingTop="4dip"
    tools:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_icon"
            android:layout_width="48dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dip"
            android:gravity="right"
            android:textSize="12sp"
            tools:text="★" />

        <TextView
            android:id="@+id/action_by_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Justaway Factory" />

        <TextView
            android:id="@+id/action_by_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:textColor="#666666"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="@justawayfactory" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginBottom="6dip"
            android:layout_marginRight="6dip"
            android:layout_marginTop="1dip"
            android:paddingTop="2dip"
            android:contentDescription="@string/description_icon"
            tools:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:stretchColumns="0">

                <TableRow tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left">

                        <TextView
                            android:id="@+id/display_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="Justaway Factory" />

                        <TextView
                            android:id="@+id/screen_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:textColor="#666666"
                            android:textSize="10sp"
                            android:lines="1"
                            android:ellipsize="end"
                            tools:ignore="SmallSp"
                            tools:text="@justawayfactory" />

                        <TextView
                            android:id="@+id/fontello_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:text="@string/fontello_lock"
                            android:textColor="#666666"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:text="鍵" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/datetime_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="10sp"
                        tools:ignore="SmallSp"
                        tools:text="2H" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Hello World." />

            <LinearLayout
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dip"
                android:layout_marginTop="10dip"
                android:orientation="vertical" />

            <TableLayout
                android:id="@+id/menu_and_via"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="5">

                <TableRow tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/do_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dip"
                        android:text="@string/fontello_reply"
                        android:textColor="#666666"
                        android:textSize="14dp"
                        tools:text="←"
                        tools:ignore="SpUsage"/>

                    <TextView
                        android:id="@+id/do_retweet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:padding="6dip"
                        android:text="@string/fontello_retweet"
                        android:textColor="#666666"
                        android:textSize="14dp"
                        tools:text="■"
                        tools:ignore="SpUsage"/>

                    <TextView
                        android:id="@+id/retweet_count"
                        android:layout_width="28dip"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dip"
                        android:paddingTop="6dip"
                        android:textColor="#999999"
                        android:textSize="10dp"
                        tools:ignore="SmallSp,SpUsage"
                        tools:text="12345" />

                    <TextView
                        android:id="@+id/do_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dip"
                        android:paddingRight="6dip"
                        android:paddingBottom="6dip"
                        android:paddingLeft="2dip"
                        android:text="@string/fontello_star"
                        android:textColor="#666666"
                        android:textSize="14dp"
                        tools:text="■"
                        tools:ignore="SpUsage"/>

                    <TextView
                        android:id="@+id/fav_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dip"
                        android:paddingTop="6dip"
                        android:textColor="#999999"
                        android:textSize="10dp"
                        tools:ignore="SmallSp,SpUsage"
                        tools:text="12345" />

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/via"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:paddingBottom="2dip"
                            android:textColor="#666666"
                            android:textSize="8sp"
                            tools:ignore="SmallSp"
                            tools:text="Justaway for Android" />

                        <TextView
                            android:id="@+id/datetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="2dip"
                            android:layout_gravity="right"
                            android:textColor="#666666"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:text="2014/01/23 15:14:30" />

                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/retweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:gravity="left"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/retweet_icon"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_marginRight="4dip"
                    android:contentDescription="@string/description_icon"
                    tools:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/retweet_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    tools:text="@su_aska" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>