<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="?android:attr/listPreferredItemHeight"
              android:padding="8dp"
              tools:ignore="UseCompoundDrawables">

    <ImageView
            android:id="@+id/spinner_switch_account_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            tools:src="@drawable/ic_launcher"
            android:contentDescription="@string/description_icon" android:layout_marginEnd="8dp"/>

    <TextView
            android:id="@+id/spinner_switch_account_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/spinner_switch_account_icon"
            android:textSize="18sp"
            tools:text="justawayfactory" android:layout_toEndOf="@id/spinner_switch_account_icon"/>

</RelativeLayout>