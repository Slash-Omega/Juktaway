<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="?android:attr/listPreferredItemHeight"
              android:baselineAligned="false"
              android:orientation="vertical"
              android:paddingBottom="3dp"
              android:paddingLeft="6dp"
              android:paddingRight="7dp"
              android:paddingTop="4dp"
              tools:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_icon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:gravity="right"
            android:textSize="12sp"
            tools:text="★"/>

        <TextView
            android:id="@+id/action_by_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Justaway Factory"/>

        <TextView
            android:id="@+id/action_by_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="#666666"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="@justawayfactory"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="1dp"
            android:paddingTop="2dp"
            android:contentDescription="@string/description_icon"
            tools:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:stretchColumns="0">

                <TableRow tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left">

                        <TextView
                            android:id="@+id/display_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="Justaway Factory"/>

                        <TextView
                            android:id="@+id/screen_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textColor="#666666"
                            android:textSize="10sp"
                            android:lines="1"
                            android:ellipsize="end"
                            tools:ignore="SmallSp"
                            tools:text="@justawayfactory"/>

                        <TextView
                            android:id="@+id/lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="@string/fontello_lock"
                            android:textColor="#666666"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:text="鍵"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/datetime_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="10sp"
                        tools:ignore="SmallSp"
                        tools:text="2H"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Hello World."/>

            <LinearLayout
                android:id="@+id/images_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"/>

            <TableLayout
                android:id="@+id/menu_and_via_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="5">

                <TableRow tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/do_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/fontello_reply"
                        android:textColor="#666666"
                        android:textSize="14dp"
                        tools:text="←"
                        tools:ignore="SpUsage"/>

                    <TextView
                        android:id="@+id/do_retweet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:paddingTop="6dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="6dp"
                        android:text="@string/fontello_retweet"
                        android:textColor="#666666"
                        android:textSize="14dp"
                        tools:text="■"
                        tools:ignore="SpUsage"/>

                    <TextView
                        android:id="@+id/retweet_count"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:textColor="#999999"
                        android:textSize="10dp"
                        tools:ignore="SmallSp,SpUsage"
                        tools:text="12345"/>

                    <TextView
                        android:id="@+id/do_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="2dp"
                        android:text="@string/fontello_star"
                        android:textColor="#666666"
                        android:textSize="14dp"
                        tools:text="■"
                        tools:ignore="SpUsage"/>

                    <TextView
                        android:id="@+id/fav_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:textColor="#999999"
                        android:textSize="10dp"
                        tools:ignore="SmallSp,SpUsage"
                        tools:text="12345"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/via"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:paddingBottom="2dp"
                            android:textColor="#666666"
                            android:textSize="8sp"
                            tools:ignore="SmallSp"
                            tools:text="Justaway for Android"/>

                        <TextView
                            android:id="@+id/datetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="2dp"
                            android:layout_gravity="right"
                            android:textColor="#666666"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:text="2014/01/23 15:14:30"/>

                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/retweet_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="left"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/retweet_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@string/description_icon"
                    tools:src="@drawable/ic_launcher"/>

                <TextView
                    android:id="@+id/retweet_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    tools:text="@su_aska"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>