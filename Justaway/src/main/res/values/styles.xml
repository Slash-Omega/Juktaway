<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="menu_background">#2b2b2b</item>
        <item name="menu_active_background">#1f1f1f</item>
        <item name="background">#101112</item>
        <item name="text_color">#ffffff</item>
        <item name="button_stateful">@drawable/button_stateful</item>
    </style>

    <style name="BlackTheme" parent="BlackBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="menu_background">#2b2b2b</item>
        <item name="menu_active_background">#1f1f1f</item>
        <item name="background">#101112</item>
        <item name="text_color">#ffffff</item>
        <item name="button_stateful">@drawable/button_stateful</item>
    </style>

    <style name="WhiteTheme" parent="WhiteBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="menu_background">#dcdcdc</item>
        <item name="menu_active_background">#808080</item>
        <item name="background">#ffffff</item>
        <item name="text_color">#000000</item>
        <item name="button_stateful">@drawable/button_stateful_light</item>
    </style>

    <drawable name="translucent_background">#99000000</drawable>

    <style name="Theme.MyTrans" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@drawable/translucent_background</item>
    </style>
</resources>
