<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:paddingBottom="3dp"
        android:paddingStart="6dp"
        android:paddingEnd="7dp"
        android:paddingTop="4dp">

    <ImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/description_icon"
            android:paddingTop="2dp"/>

    <TextView
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/icon"
            tools:text="justawayfactory"/>

    <TextView
            android:id="@+id/screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/display_name"
            android:layout_alignBaseline="@id/display_name"
            android:layout_marginStart="4dp"
            android:textColor="#666666"
            android:textSize="10sp"
            tools:text="justawayfactory"
            tools:ignore="SmallSp"/>

    <ImageView
            android:id="@+id/lock"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@id/screen_name"
            android:layout_toEndOf="@+id/screen_name"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_lock"
            android:tint="#666666" />

    <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon"
            android:layout_below="@id/display_name"
            tools:text="Justaway for Android"
            android:textSize="12sp"/>

</RelativeLayout>
